[flake8]
count = True
show_source = True
statistics = True
max_line_length = 127
per_file_ignores = 
    tests/*: D102
    tests/__init__.py: D104
    cli.py: E501, C901
docstring_convention = numpy
ignore = D105, D401, E203, E302, W503
exclude =
    .git,
    __pycache__,
    tests/testsproblem/*,
ignore_decorators=inherit_docs